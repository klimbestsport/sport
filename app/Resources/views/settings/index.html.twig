{% extends 'base.html.twig' %}

{% block body %}
    <h2>Settings</h2><a style="float:right"href="{{ path('settings_new') }}">   <i class="fa fa-user-plus fa-2x" aria-hidden="true"></i></a>

    <div class="table-responsive">
        <table class="table table-striped table-condensed" id='tabliczka'>
            <thead>
                <tr>
                    <th>Parameter</th>
                    <th>Value</th>
                    <th>Txt</th>
                    <th>Description</th>
                    <th>Actions</th>
                </tr>
            </thead>
            <tbody>
                {% for setting in settings %}
                    <tr>
                        <td><a href="{{ path('settings_show', { 'id': setting.id }) }}">{{ setting.parameter }}</a></td>
                        <td>{{ setting.value }}</td>
                        <td>{{ setting.txt }}</td>
                        <td>{{ setting.description }}</td>
                        <td>
                            <a href="{{ path('settings_edit', { 'id': setting.id }) }}"><i style="color:#622925e6" class="fa fa-pencil fa-fw fa-2x"></i></a>
                        </td>
                    </tr>
                {% endfor %}
            </tbody>
        </table>

        <style>

            strong{
                font-size:15px;
                color:#AA3333;
            }
            span{
                font-size:25px;

            }    
            h1{
                font-size: 2.5rem;
                padding-bottom: 30px;
            }
            a{
                color: #622925;

            }
            a:hover{
                text-decoration:none;
            }
            thead{
                background:silver;
            }
            table{
                font-size:middle;
            }
            tbody{

                background:#f0eded;
            }
            td{
                border-bottom: 0.7px solid white;
            }
            th{
            }  
            table.sortable thead {
                color: #622925;
                font-weight: bold;
                cursor: default;
            }
        
     
        </style>

    {% endblock %}
